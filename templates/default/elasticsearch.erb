#
bootstrap.memory_lock: true
#
# ---------------------------------- Network -----------------------------------
#
network.publish_host: HOSTNAME2 #nodeName
network.host: 10.0.0.1          #nodeIP
network.bind_host: 0.0.0.0
#
# --------------------------------- Discovery ----------------------------------
#
discovery.seed_hosts: ["HOSTNAME1 ", "HOSTNAME2","HOSTNAME3"] #our 3 nodes
