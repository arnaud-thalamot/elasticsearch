# ---------------------------------- Cluster -----------------------------------
#
cluster.name: clusterelastic
#
# ------------------------------------ Node ------------------------------------
#
node.name: <%= @hostname %>
#
#
node.master: true
node.data: false #this parameter is keeped Only on node 1
cluster.initial_master_nodes: HOSTNAME1 #always refer to node2
#
# ----------------------------------- Paths ------------------------------------
#
path.data: /elastic/data/data01, /elastic/data/data02
#
path.logs: /elastic/log
#
